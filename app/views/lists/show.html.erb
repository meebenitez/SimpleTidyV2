



<div class="row">
    <div class="col-sm-3 col-xs-12 zero-padding">
        <div class="fixed-sidebar zero-padding">
                <div class="col-xs-12">
                    <%= render 'layouts/navbar' %>
                </div>
        </div>
    </div>
    <div class="col-sm-9 col-xs-12 zero-padding">
        <div class="row col-xs-12 zero-padding">
            <%= render partial: "minicolumn", locals: {chore_list: @todo_chores.all, list: @list } %>      
        </div>
    </div>

</div>


<div class="row content padding1">
    <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2">
        <%= render 'layouts/messages' %><br>
    </div>
</div>


<div class="row content">
    <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2">
        <div class="col-xs-8 col-md-8 height60 padding2">
            <div class="col-xs-12 col-md-12 align-text-bottom text-left padding0">
                <%= link_to image_tag((list_type_photo @list), :class=> "logo"), @list %>
                <span style="display: inline-block; vertical-align: bottom;">
                    <span style="font-size: 24px; font-family: 'Lato', sans-serif;">
                    <%= @list.name %> 
                    <% if can? :edit, @list %>
                        <%= link_to image_tag("edit_icon.png", :class => "edit"), edit_list_path(@list.id) %>
                    <% end %>
                    </span>
                </span> 
            </div>
        </div>
        <div class="col-xs-4 col-md-4 height60 padding2">
            <div class="col-xs-12 col-md-12 align-text-bottom text-right padding0">
                <span style="display: inline-block; vertical-align: bottom;">
                    <span style="font-size: 15px;">
                        <% @list.users.each do |user| %>
                            <%= link_to image_tag(user.imgurl, :class => "photo"), user_path(user.id) %>
                        <% end %>
                        <% if can? :edit, @list %>
                            <%= link_to image_tag('plus.png', :class =>"photo"), new_list_invite_path(@list.id) %>
                        <% end %>
                    </span>
                </span> 
            </div>
        </div>
    </div>
</div>
<div class="row content padding1">
  <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2 img-rounded padding4">
    <div class="row content padding0">
        <h3>Today's Goals</h3>
       | <span style="color: #3d9c8c; font-size: 15px;"><%= @daily_chores.count %> daily</span> |
        <span style="color: rgb(231, 154, 12); font-size: 15px;"> <%= calculate_weekly_goal @weekly_chores.count %> weekly</span> |
        <span style="color: #247BA0; font-size: 15px;">
            <%= calculate_monthly_goal @monthly_chores.count %> monthly
        </span> |
    </div>    

    <div class="row content padding0">
        <div class="show-completed"><a href="">Toggle Completed Chores</a></div>
        <div class="completed-chores">
            <div class="completed-items">
                <% @done_chores.each do |chore| %>
                    <div class="completed-item">
                        <button class="chore completed" id="<%= chore.id %>">
                            <%= decide_time_of_day chore %>
                        </button>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
  </div>
</div>
<div class="row content padding1">
    <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2">
        <div class="col-xs-12 col-md-12 height60 padding2">
            <div class="col-xs-12 col-md-12 align-text-top text-center">
                
            </div>
        </div>
    </div>
</div>
   
        