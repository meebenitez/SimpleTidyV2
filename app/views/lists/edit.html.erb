<div class="row content padding1">
    <%= render 'layouts/messages' %><br>
</div>
    

<div class="row content">
    <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2 padding0">
        <div class="col-xs-8 col-md-8 height60 padding2">
            <div class="col-xs-12 col-md-12 align-text-bottom text-left padding0">
                <span style="display: inline-block; vertical-align: bottom;">
                    <span id="list-name">
                    <%= link_to @list.name, @list, {:class => "listname_home"} %>
                    </span>
                    <span sytle="font-size: 18px;">
                        (EDIT MODE)
                    </span> 
                    </span>
                </span> 
            </div>
        </div>
        <div class="col-xs-12 col-md-12 border img-rounded padding0">
            <% if can? :manage, @list %>
                <div class="col-xs-12 col-md-12">
                    <br>
                    <br>
                    <%= link_to image_tag((list_type_photo @list), :class=> "logo"), @list %><br>
                    <%= form_for(@list) do |f| %>
                        <h2>Change List Name</h2><br>
                        <%= f.text_field :name, :value => @list.name, :class => 'edit_name', :maxlength => 15, :size => 40 %><br>
                        <%= f.submit 'Change Name', :class => 'edit_name_button', :id => 'change-name' %>
                    <% end %>
                    <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2">
                        <%= render partial: 'edit_members', locals: {list: @list} %>
                    </div>
                </div>
            <% end %>
                <div class="col-xs-12 col-md-12 index-bg line">
                    <h2>Add/Edit/Delete Chores</h2>
                </div>
                <div class="col-xs-7 col-md-7 border index-bg" style="height: 500px;">
                    <%= render partial: 'chores/chore_new', locals: {chore: @chore, list: @list } %>
                </div>
                <div class="col-xs-5 col-md-5 border text-left" style="height: 500px; overflow: auto;">
                    <div class="col-xs-12 col-md-12">
                        <span style="color: #70c1b3; font-size: 20px; ">Daily</span>
                    </div>
                    <div class="col-xs-12 col-md-12">  
                        <%= render partial: "minicolumn_edit", locals: {chore_list: @daily_chores, :list_frequency => "daily" } %>
                    </div>
                    <div class="col-xs-12 col-md-12">
                        <span style="color: #F9C563; font-size: 20px;">Weekly</span>
                    </div>
                    <div class="col-xs-12 col-md-12">
                        <%= render partial: "minicolumn_edit", locals: {chore_list: @weekly_chores, :list_frequency => "weekly" } %>
                    </div>
                    <div class="col-xs-12 col-md-12">
                        <span style="color: #247BA0; font-size: 20px;">Monthly</span>
                    </div>
                    <div class="col-xs-12 col-md-12">
                        <%= render partial: "minicolumn_edit", locals: {chore_list: @monthly_chores, :list_frequency => "monthly" } %>
                    </div>
                </div>
                <% if can? :manage, @list %>
                    <div class="col-xs-12 col-md-12">
                        <h3><%= link_to "Delete '#{@list.name}'", list_path(@list.id), :method=>"delete" %></h3><span>This action cannot be undone.</span>
                        <br>
                    </div>
                <% end %>
        </div>
    </div>
</div>

<div class="row content padding1">
        <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2">
            <div class="col-xs-12 col-md-12 height60 padding2">
                <div class="col-xs-12 col-md-12 align-text-top text-center">
                    
                </div>
            </div>
        </div>
    </div>




