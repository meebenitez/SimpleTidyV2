    <div class="col-xs-8 col-md-8 height60 padding2">
        <div class="col-xs-12 col-md-12 align-text-bottom text-left padding0">
            <%= link_to image_tag((list_type_photo @list), :class=> "logo"), @list %>
            <span style="display: inline-block; vertical-align: bottom;">
                <span id="list-name" style="font-size: 24px; font-family: 'Lato', sans-serif;">
