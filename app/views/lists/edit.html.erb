                    <%= render partial: "minicolumn_edit", locals: {chore_list: @daily_chores, :list_frequency => "daily" } %>
                </div>
                <div class="col-xs-12 col-md-12">
                    <span style="color: #F9C563; font-size: 20px;">Weekly</span>
                </div>
                <div class="col-xs-12 col-md-12">
                    <%= render partial: "minicolumn_edit", locals: {chore_list: @weekly_chores, :list_frequency => "weekly" } %>
                </div>
