
  <div class="dummycolumn">
    .<br>.<br>.<br>
  </div>

  <div class="column1_header">
    <div class="alignleft_header">
        <%= link_to image_tag((list_type_photo @list), :class=> "logo"), @list %> <span style="font-size: 20px;" id="list-name"><%= @list.name %></span>
    </div>
    <div class="alignright_header">
      <br><br>
      (EDIT MODE)
    </div>
    
    <div style="clear: both;"></div>
  </div>
  
  <% if can? :manage, @list %>
    <div class="column1_line">
      <center>
        <%= render 'layouts/messages' %>
        <%= form_for(@list) do |f| %>
          <%= f.text_field :name, :value => @list.name, :class => 'edit_name', :maxlength => 15, :size => 40 %><br>
          <%= f.submit 'Change Name', :class => 'edit_name_button', :id => 'change-name' %>
        <% end %>
      </center>
    </div>
  <% end %>

  <div class="column1_line">
    <center>
      <br><h1 style="color: #70c1b3 ">Daily</h1>
    </center>
    <%= render partial: "minicolumn_edit", locals: {chore_list: @daily_chores, :list_frequency => "daily" } %>
  </div>

  <div class="column1_line">
    <center>
      <h1 style="color: #F9C563">Weekly</h1>
    </center>
    <%= render partial: "minicolumn_edit", locals: {chore_list: @weekly_chores, :list_frequency => "weekly" } %>
  </div>

  <div class="column1_line">
    <center>
      <h1 style="color: #247BA0">Monthly</h1>
    </center>
    <%= render partial: "minicolumn_edit", locals: {chore_list: @monthly_chores, :list_frequency => "monthly" } %>
  </div>
  <div class="column1">
    <%= render partial: 'chores/chore_new', locals: {chore: @chore, list: @list } %>
  </div>
  </div>
  <% if can? :manage, @list %>
    <div class="column1_line">
      <center>
        <%= render partial: 'edit_members', locals: {list: @list} %>
      </center>
    </div>
    </div>
    <div class="column1_line">
      <center><h2><%= link_to 'Delete This List', list_path(@list.id), :method=>"delete" %></h2></center>
    </div>
    <% end %>
    

      

       




