
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
   <%= devise_error_messages! %>
   <% f.hidden_field :reset_password_token %>
 
   <div class="field">
     <% if @minimum_password_length %>
     Change Password:<br>
       (minimum <%= @minimum_password_length %> characters)<br />
     <% end %>
     <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'edit_name' %>
   </div>
 
   <div class="field">
      Confirm Password:<br>
     <%= f.password_field :password_confirmation, autocomplete: "off", class: 'edit_name' %>
   </div>

   <div class="actions">
     <%= f.submit "Change Password", class: 'edit_name_button' %>
   </div>
 <% end %>